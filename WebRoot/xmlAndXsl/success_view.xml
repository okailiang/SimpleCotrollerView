<?xml version="1.0" encoding="UTF-8"?>
<view>
	<header>
	  <title>a viewer in MVC</title>
	</header>
	<body>
		<form>
			<name>logoutForm</name>
			<action>logout.action</action>
			<method>post</method>
			<textView>
				 <name>userName</name>
				 <label>LoginName:</label>
				 <value>习惯追求卓越</value>
			 </textView>
			 <textView>
				 <name>userAge</name>
				 <label>Age:</label>
				 <value>30</value>
			  </textView>
			  <buttonView>
			      <type>submit</type>
				  <name>logoutButton</name>
				  <label>logout</label>
			   </buttonView>
		</form>
	 </body>
</view>
                    