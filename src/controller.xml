<?xml version="1.0" encoding="UTF-8"?>
<action-controller>
    <interceptor>
        <name>logWriter</name>
        <class>
             <name>com.servlet.interceptor.LogWriter</name>
             <method>log</method>
        </class>
    </interceptor>
	<action>
		<name>login</name>
		<class>
			<cname>com.servlet.action.LoginAction</cname>
			<method>login</method>
		</class>
		<interceptor-ref>
		    <iname>logWriter</iname>
		</interceptor-ref>
		<result>
			<rname>success</rname>
			<type>forward</type>
			<value>success_view.xml</value>
		</result>
		<result>
			<rname>fail</rname>
			<type>redirect</type>
			<value>jsp/login_fail.jsp</value>
		</result>
	</action>
	<action>
		<name>register</name>
		<class>
			<cname>com.servlet.action.RegisterAction</cname>
			<method>register</method>
		</class>
		<interceptor-ref>
		    <iname>logWriter</iname>
		</interceptor-ref>
		<result>
			<rname>success</rname>
			<type>forward</type>
			<value>jsp/register_success.jsp</value>
		</result>
		<result>
			<rname>fail</rname>
			<type>redirect</type>
			<value>jsp/register.jsp</value>
		</result>
	</action>
</action-controller>